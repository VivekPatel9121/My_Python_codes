import random
import string

def password(len=10) :
    characters = string.ascii_letters + string.digits + "!@#$%&"
    password_1 = []
        
    password_1.append(random.choice(string.ascii_uppercase))
    password_1.append(random.choice(string.ascii_lowercase))
    password_1.append(random.choice(string.digits))
    password_1.append(random.choice("!@#$%&"))
    
    for i in range(len - 4) :
        password_1.append(random.choice(characters))
        
    random.shuffle(password_1)
    return ''.join(password_1)

print(password(10))
